    "karma-mocha": "~0.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "load-grunt-tasks": "^3.5.0",
    "mocha": "^2.3.3",
    "mr-doc": "^3.2.1",
    "mr-doc-theme-cayman": "^1.4.1",
