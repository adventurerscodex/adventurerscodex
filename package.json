    "eslint": "^2.8.0",
    "grunt": "~0.4.5",
    "grunt-cli": "~0.1.13",
    "grunt-eslint": "^18.1.0",
    "grunt-karma": "~0.12.0",
    "grunt-karma-coveralls": "^2.5.4",
    "istanbul": "^0.3.22",
    "jasmine-core": "^2.3.4",
    "karma": "~0.13.3",
